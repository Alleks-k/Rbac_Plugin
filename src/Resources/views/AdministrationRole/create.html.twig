{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %}{{ 'sylius_rbac.ui.new_administration_role'|trans }} {{ parent() }}{% endblock %}

{% block content %}

{% include '@SyliusRbacPlugin/AdministrationRole/Create/_header.html.twig' %}
{% include '@SyliusRbacPlugin/AdministrationRole/Create/_breadcrumb.html.twig' %}

<div class="ui segment">
    <form name="sylius_rbac_administration_role" method="PUT" class="ui loadable form" novalidate="novalidate" action={{ path('sylius_rbac_administration_role_create') }}>
        <div id="sylius_rbac_administration_role">
                <div class="required field">
                    <label for="sylius_rbac_administration_role_name" class="required">{{ 'sylius_rbac.ui.name'|trans }}</label>
                    <input type="text" id="sylius_rbac_administration_role_name" name="administration_role_name" required="required" />
                </div>
            <div class="required field">
                <label for="sylius_rbac_administration_role_permissions">{{ 'sylius_rbac.ui.permissions'|trans }}</label>
                <select id="sylius_rbac_administration_role_permissions" name="permissions[]" class="ui dropdown" multiple="multiple">
                    {% for permission in permissions %}
                        <option value={{ permission }}>{{ ('sylius_rbac.ui.permission.' ~ permission)|trans }}
                    {% endfor %}
                </select>
            </div>

            <div class="ui basic segment">
                <div class="ui buttons">
                    <button class="ui labeled icon primary button" type="submit"><i class="plus icon"></i>{{ 'sylius.ui.create'|trans }}</button>
                    <a href={{ path('sylius_rbac_admin_administration_role_index') }} class="ui button">{{ 'sylius.ui.cancel'|trans }}</a>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
